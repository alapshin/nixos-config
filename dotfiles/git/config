[alias]
	# https://blog.filippo.io/git-fixup-amending-an-older-commit/
	fixup = "!f() { REV=$(git rev-parse "$1"); git commit --fixup=$REV ${@:2} && GIT_SEQUENCE_EDITOR=true git rebase -i --autostash --autosquash $REV^; }; f"
	stash-all = stash save --include-untracked
[color]
	ui = auto
[core]
	editor = nvim
	whitespace = cr-at-eol
[delta]
	navigate = true
[diff]
	colorMoved = default
[fetch]
	prune = true
[init]
  defaultBranch = main
[merge]
	conflictstyle = diff3
[pull]
	ff = only
[push]
	default = simple
	followTag = true
[rerere]
	enabled = true
[stash]
	showPatch = true
[tag]
	sort = v:refname
[transfer]
	fsckobjects = true
