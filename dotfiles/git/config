	email = alapshin@fastmail.com

[github]
	user = alapshin

[diff "sopsdiff"]
	textconv = "sops -d"

[difftool "androidstudio"]
	cmd = android-studio nosplash diff $LOCAL $REMOTE 2>/dev/null
	trustExitCode = true

[mergetool "androidstudio"]
	cmd = android-studio nosplash merge $LOCAL $REMOTE $BASE $MERGED 2>/dev/null
	trustExitCode = true
